{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/media{,/**}",
        "destination": "/*.html"
      },
      {
        "source": "/js{,/**}",
        "destination": "/*.html"
      },
      {
        "source": "/css{,/**}",
        "destination": "/*.html"
      }
    ]
  }
}
